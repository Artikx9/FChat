<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.artik.fastchat.MainActivity">

    <TextView
        android:id="@+id/textFC"
        android:text="FastChat"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:textColor="#E65100"
        android:layout_width="120dp"
        android:layout_height="40dp" />
    <ImageView
        android:id="@+id/image_message"
        android:src="@drawable/ic_message"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/group_login"
        android:layout_below="@id/image_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/main_editLogin"
                android:hint="Введите ваш логин"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/main_editPassword"
                android:hint="Введите ваш пароль"
                android:padding="5dp"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/group_login"
        android:weightSum="2">
      <Button
          android:id="@+id/main_btnLogin"
          android:layout_weight="1"
          android:layout_width="0dp"
          android:background="@color/colorPrimaryDark"
          android:textColor="@color/colorAccent"
          android:text="Войти"
          android:layout_marginRight="5dp"
          android:width="0dp"
          style="@style/Widget.AppCompat.Button.Borderless"
          android:layout_height="wrap_content" />

        <Button
            android:id="@+id/main_btnSignup"
            android:layout_weight="1"
            android:layout_width="0dp"

            android:background="#01579B"
            android:textColor="@color/colorAccent"
            android:text="Зарегистироваться"
            android:layout_marginRight="5dp"
            android:width="0dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content" />


    </LinearLayout>


</RelativeLayout>
